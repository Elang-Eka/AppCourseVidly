@model WebApplication2.viewModel.NewMovieViewModel
@{
    /**/

    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.NameTitleForm == 0)
{
    <h2>New Movie Form</h2>
}
else
{
    <h2>Edit Movie Form</h2>
}
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group mt-4">
        @Html.LabelFor(m => m.Movie.Name, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control", @placeholder = "Movie Name" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>
    if (Model.NameTitleForm == 0)
    {
        <div class="form-group mt-4 has-danger">
            @Html.LabelFor(m => m.Movie.DateAdded, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Movie.DateAdded, "{0:dd MMMM yyyy}", new { @class = "form-control",@type="date", @placeholder = "Movie Release Date" })
            <br />
            @Html.ValidationMessageFor(m => m.Movie.DateAdded)
        </div>
        <div class="form-group mt-4 has-danger">
            @Html.LabelFor(m => m.Movie.ReleaseDate, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:dd MMMM yyyy}", new { @class = "form-control",@type = "date", @placeholder = "Movie Release Date" })
            <br />
            @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
        </div>
    }
    else
    {
        <div class="form-group mt-4 has-danger">
            @Html.LabelFor(m => m.Movie.DateAdded, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Movie.DateAdded, "{0:dd MMMM yyyy}", new { @class = "form-control", @placeholder = "Movie Release Date" })
            <small class="form-text text-muted">Example : 01 January 2000</small>
            <br />
            @Html.ValidationMessageFor(m => m.Movie.DateAdded)
        </div>
        <div class="form-group mt-4 has-danger">
            @Html.LabelFor(m => m.Movie.ReleaseDate, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:dd MMMM yyyy}", new { @class = "form-control", @placeholder = "Movie Release Date" })
            <small class="form-text text-muted">Example : 01 January 2000</small>
            <br />
            @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
        </div>
    }
    <div class="form-group mt-4">
        @Html.LabelFor(m => m.Movie.GenreId, new { @class = "form-label" })
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre Movie", new { @class = "form-select", @placeholder = "Movie Genre", @type = "date" })
        @Html.ValidationMessageFor(m => m.Movie.GenreId)
    </div>
    <div class="form-group mt-4 ">
        @Html.LabelFor(m => m.Movie.NumberInStock, new { @class = "form-label" })
        <div class="input-group">
            <span class="input-group-text">$</span>
            @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
            <br />
        </div>
        @Html.ValidationMessageFor(m => m.Movie.NumberInStock)
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary mt-4">Save Data</button>
}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
